@model ChuyenDeASPNET.Context.Product

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">Product Details</h2>

<div class="container mt-4">
    <h4>Product Information</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>

                <dt>@Html.DisplayNameFor(model => model.ShortDes)</dt>
                <dd>@Html.DisplayFor(model => model.ShortDes)</dd>

                <dt>@Html.DisplayNameFor(model => model.FullDescription)</dt>
                <dd>@Html.DisplayFor(model => model.FullDescription)</dd>

                <dt>@Html.DisplayNameFor(model => model.Price)</dt>
                <dd>@Html.DisplayFor(model => model.Price)</dd>

                <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                <dd>@Html.DisplayFor(model => model.Id)</dd>

                <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                <dd>@Html.DisplayFor(model => model.Id)</dd>
            </dl>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Product Image</label>
                <div class="text-center">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Url.Content("~/Content/images/items/" + Model.Avatar)" alt="Product Image" class="img-fluid" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.CreatedOnUtc)</dt>
                <dd>@Html.DisplayFor(model => model.CreatedOnUtc)</dd>


                <dt>@Html.DisplayNameFor(model => model.UpdatedOnUtc)</dt>
                <dd>@Html.DisplayFor(model => model.UpdatedOnUtc)</dd>

             
            </dl>
        </div>

        
    </div>

    <div class="form-group mt-4">
        <div class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg mx-2" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-lg mx-2" })
        </div>
    </div>
</div>
